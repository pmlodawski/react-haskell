name:                todomvc
version:             0.1.0.0
synopsis:            yet another todomvc, this time in react-haskell
-- description:
license:             MIT
license-file:        LICENSE
author:              Joel Burget
maintainer:          joelburget@gmail.com
copyright:           (c) Joel Burget 2015
category:            Web
build-type:          Simple
cabal-version:       >=1.10

data-dir: lib
data-files: stubs.js, react.js

executable react-haskell-todomvc
  main-is:             todomvc.hs
  other-extensions:
    OverloadedStrings,
    LiberalTypeSynonyms,
    Rank2Types,
    TupleSections,
    GeneralizedNewtypeDeriving,
    TypeFamilies,
    NamedFieldPuns,
    MultiParamTypeClasses,
    ExtendedDefaultRules
  build-depends:
    base >=4.6 && <5,
    containers >= 0.5.5,
    lens-family,
    lens-family-th,
    react-haskell,
    void,
    text
  default-language:    Haskell2010
